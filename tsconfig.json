        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "jsx": "preserve",
        "baseUrl": ".",
