            "@txtxtxama-aaa-c/*": ["./packages/*"],
            "txtxtxama-aaa-c": ["packages/txtxtxama-aaa-c/index.ts"]
        }
    },
    "include": ["**/*", ".vitepress/**/*"],
    "exclude": ["node_modules", "dist", "commitlint.config.js"]
}
